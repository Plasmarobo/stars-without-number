= form_for @mental_save_progression do |f|
  - if @mental_save_progression.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mental_save_progression.errors.count, "error")} prohibited this mental_save_progression from being saved:"
      %ul
        - @mental_save_progression.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :character_class_id
    = f.number_field :character_class_id
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :mental_save
    = f.number_field :mental_save
  .actions
    = f.submit 'Save'
