= form_for @fleet do |f|
  - if @fleet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fleet.errors.count, "error")} prohibited this fleet from being saved:"
      %ul
        - @fleet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :system_id
    = f.number_field :system_id
  .field
    = f.label :planet_id
    = f.number_field :planet_id
  .field
    = f.label :poi_id
    = f.number_field :poi_id
  .field
    = f.label :faction_id
    = f.number_field :faction_id
  .field
    = f.label :speed
    = f.number_field :speed
  .actions
    = f.submit 'Save'
