= form_for @character_class do |f|
  - if @character_class.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character_class.errors.count, "error")} prohibited this character_class from being saved:"
      %ul
        - @character_class.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :gm_notes
    = f.text_field :gm_notes
  .actions
    = f.submit 'Save'
