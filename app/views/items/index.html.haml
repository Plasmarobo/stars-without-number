%h1 Listing items

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Cost
      %th Encumberance
      %th Tech level
      %th Uses
      %th Gm notes
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.name
        %td= item.description
        %td= item.cost
        %td= item.encumberance
        %td= item.tech_level
        %td= item.uses
        %td= item.gm_notes
        %td= link_to 'Show', item
        %td= link_to 'Edit', edit_item_path(item)
        %td= link_to 'Destroy', item, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
