= form_for @item_slot do |f|
  - if @item_slot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item_slot.errors.count, "error")} prohibited this item_slot from being saved:"
      %ul
        - @item_slot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item_id
    = f.number_field :item_id
  .field
    = f.label :character_id
    = f.number_field :character_id
  .field
    = f.label :uses
    = f.number_field :uses
  .field
    = f.label :notes
    = f.text_field :notes
  .field
    = f.label :gm_notes
    = f.text_field :gm_notes
  .actions
    = f.submit 'Save'
