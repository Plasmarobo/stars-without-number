= form_for @ammo_slot do |f|
  - if @ammo_slot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ammo_slot.errors.count, "error")} prohibited this ammo_slot from being saved:"
      %ul
        - @ammo_slot.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :character_id
    = f.number_field :character_id
  .field
    = f.label :weapon_slot_id
    = f.number_field :weapon_slot_id
  .field
    = f.label :ship_weapon_slot_id
    = f.number_field :ship_weapon_slot_id
  .field
    = f.label :item_slot_id
    = f.number_field :item_slot_id
  .field
    = f.label :rounds_fired
    = f.number_field :rounds_fired
  .field
    = f.label :cargo_slot_id
    = f.number_field :cargo_slot_id
  .actions
    = f.submit 'Save'
