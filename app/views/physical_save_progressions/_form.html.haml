= form_for @physical_save_progression do |f|
  - if @physical_save_progression.errors.any?
    #error_explanation
      %h2= "#{pluralize(@physical_save_progression.errors.count, "error")} prohibited this physical_save_progression from being saved:"
      %ul
        - @physical_save_progression.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :character_class_id
    = f.number_field :character_class_id
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :physical_save
    = f.number_field :physical_save
  .actions
    = f.submit 'Save'
