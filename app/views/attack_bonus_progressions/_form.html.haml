= form_for @attack_bonus_progression do |f|
  - if @attack_bonus_progression.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attack_bonus_progression.errors.count, "error")} prohibited this attack_bonus_progression from being saved:"
      %ul
        - @attack_bonus_progression.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :character_class_id
    = f.number_field :character_class_id
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :attack_bonus
    = f.number_field :attack_bonus
  .actions
    = f.submit 'Save'
