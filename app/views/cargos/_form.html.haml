= form_for @cargo do |f|
  - if @cargo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cargo.errors.count, "error")} prohibited this cargo from being saved:"
      %ul
        - @cargo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :item_id
    = f.number_field :item_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :mass
    = f.text_field :mass
  .field
    = f.label :count
    = f.text_field :count
  .actions
    = f.submit 'Save'
