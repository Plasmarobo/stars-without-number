%table
  %thead
    %tr
      %th Item
      %th Name
      %th Description
      %th Cost
      %th Mass
      %th Count
      %th
      %th
      %th

  %tbody
    - @cargos.each do |cargo|
      %tr
        %td= cargo.item_id
        %td= cargo.name
        %td= cargo.description
        %td= cargo.cost
        %td= cargo.mass
        %td= cargo.count
        %td= link_to 'Show', cargo
        %td= link_to 'Edit', edit_cargo_path(cargo)
