= form_for @evasion_save_progression do |f|
  - if @evasion_save_progression.errors.any?
    #error_explanation
      %h2= "#{pluralize(@evasion_save_progression.errors.count, "error")} prohibited this evasion_save_progression from being saved:"
      %ul
        - @evasion_save_progression.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :character_class_id
    = f.number_field :character_class_id
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :evasion_save
    = f.number_field :evasion_save
  .actions
    = f.submit 'Save'
