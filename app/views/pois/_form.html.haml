= form_for @poi do |f|
  - if @poi.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poi.errors.count, "error")} prohibited this poi from being saved:"
      %ul
        - @poi.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.number_field :description
  .field
    = f.label :orbit_id
    = f.number_field :orbit_id
  .field
    = f.label :gm_notes
    = f.text_field :gm_notes
  .field
    = f.label :image_src
    = f.text_field :image_src
  .actions
    = f.submit 'Save'
