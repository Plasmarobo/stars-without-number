= form_for @ship do |f|
  - if @ship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ship.errors.count, "error")} prohibited this ship from being saved:"
      %ul
        - @ship.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :hp
    = f.number_field :hp
  .field
    = f.label :free_power
    = f.number_field :free_power
  .field
    = f.label :free_mass
    = f.number_field :free_mass
  .field
    = f.label :ship_hull_id
    = f.number_field :ship_hull_id
  .actions
    = f.submit 'Save'
