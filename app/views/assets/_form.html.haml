= form_for @asset do |f|
  - if @asset.errors.any?
    #error_explanation
      %h2= "#{pluralize(@asset.errors.count, "error")} prohibited this asset from being saved:"
      %ul
        - @asset.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :max_hp
    = f.number_field :max_hp
  .field
    = f.label :asset_type
    = f.text_field :asset_type
  .field
    = f.label :attribute_type
    = f.text_field :attribute_type
  .field
    = f.label :cost
    = f.number_field :cost
  .field
    = f.label :upkeep
    = f.number_field :upkeep
  .field
    = f.label :tech_level
    = f.number_field :tech_level
  .field
    = f.label :asset_level
    = f.number_field :asset_level
  .field
    = f.label :attack_attribute
    = f.text_field :attack_attribute
  .field
    = f.label :defense_attribute
    = f.text_field :defense_attribute
  .field
    = f.label :attack_roll
    = f.text_field :attack_roll
  .field
    = f.label :counter_roll
    = f.text_field :counter_roll
  .field
    = f.label :special
    = f.text_field :special
  .actions
    = f.submit 'Save'
