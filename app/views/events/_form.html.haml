= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_field :body
  .field
    = f.label :x
    = f.number_field :x
  .field
    = f.label :y
    = f.number_field :y
  .field
    = f.label :planet_id
    = f.number_field :planet_id
  .field
    = f.label :system_id
    = f.number_field :system_id
  .field
    = f.label :faction_id
    = f.number_field :faction_id
  .field
    = f.label :player_id
    = f.number_field :player_id
  .field
    = f.label :npc_id
    = f.number_field :npc_id
  .field
    = f.label :ship_id
    = f.number_field :ship_id
  .field
    = f.label :fleet_id
    = f.number_field :fleet_id
  .field
    = f.label :tags
    = f.text_field :tags
  .actions
    = f.submit 'Save'
