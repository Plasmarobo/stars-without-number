= form_for @orbit do |f|
  - if @orbit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@orbit.errors.count, "error")} prohibited this orbit from being saved:"
      %ul
        - @orbit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :distance
    = f.number_field :distance
  .field
    = f.label :period
    = f.text_field :period
  .field
    = f.label :angle
    = f.text_field :angle
  .field
    = f.label :index
    = f.number_field :index
  .actions
    = f.submit 'Save'
